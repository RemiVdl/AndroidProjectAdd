<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constrainedWidth="true"
    android:layout_gravity="center">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="@+id/image_dish_description">

        <TextView
            android:id="@+id/title_dish_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fried Eggs"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:textColor="@color/colorWhite">

        </TextView>
        <TextView
            android:id="@+id/description_dish_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:justificationMode="inter_word"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.">

        </TextView>

        <TextView
            android:id="@+id/price_dish_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorWhite"
            android:text="5.50 â‚¬">

        </TextView>
        <Button
            android:id="@+id/button_dish_description"
            android:drawableEnd="@drawable/shop2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="50dp"
            android:text="Add to Cart"
            android:background="@color/colorWhite"></Button>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_dish_description"
        android:layout_width="0dp"

        android:layout_height="140dp"
        android:src="@drawable/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>